@using Tubeshade.Data.Media
@using Tubeshade.Server.Pages.Shared
@model IVideoPage

<form method="get" class="row row-cols-1 row-cols-sm-auto g-2 align-items-center mb-2"
      hx-get="" hx-page-handler="" hx-params="*" hx-push-url="true"
      hx-trigger="input changed delay:100ms" hx-target="#videos">

    <div class="col-12 col-md">
        <input asp-for="Query" class="form-control" type="search" placeholder="Search"/>
    </div>

    <div class="col-12">
        <label asp-for="Viewed" hidden="hidden">Viewed</label>
        <select asp-for="Viewed" class="form-select">
            <option value="">All</option>
            <option value="@true">Viewed</option>
            <option value="@false">Not viewed</option>
        </select>
    </div>

    <div class="col-12">
        <label asp-for="Type" hidden="hidden">Video type</label>
        <select asp-for="Type" class="form-select">
            <option value="">All types</option>
            @foreach (var type in VideoType.List)
            {
                <option value="@type.Name">@type.Name</option>
            }
        </select>
    </div>

    <div class="col-12">
        <label asp-for="WithFiles" hidden="hidden">With files</label>
        <select asp-for="WithFiles" class="form-select">
            <option value="">All</option>
            <option value="@true">With files</option>
            <option value="@false">Without files</option>
        </select>
    </div>

    <div class="col-12">
        <label asp-for="Availability" hidden="hidden">Availability</label>
        <select asp-for="Availability" class="form-select">
            <option value="">Any availability</option>
            @foreach (var availability in ExternalAvailability.List)
            {
                <option value="@availability.Name">@availability.Name</option>
            }
        </select>
    </div>

    <div class="col-12">
        <label asp-for="PageSize" hidden="hidden">Page size</label>
        <input asp-for="PageSize" class="form-control" type="number" placeholder="Page size"
               value="@(Model.PageSize is null or Defaults.PageSize ? null : Model.PageSize)"/>
    </div>

    <div class="col-auto">
        <button type="submit" class="btn btn-primary" title="Search">
            🔎︎
        </button>
    </div>

    @if (Model is IPageWithSettings)
    {
        <div class="col-auto">
            <a asp-page-handler="Settings" class="btn btn-secondary">
                Settings
            </a>
        </div>
    }

    <input asp-for="PageIndex" value="@Model.PageIndex" hidden="hidden"/>
</form>
