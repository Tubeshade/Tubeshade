@using Tubeshade.Server.Pages.Shared
@model Tubeshade.Server.Pages.Shared.ITaskPage

<form method="get" class="row row-cols-1 row-cols-sm-auto g-2 align-items-center mb-2"
      hx-get="" hx-page-handler="Running" hx-params="*" hx-push-url="true"
      hx-trigger="input changed delay:100ms" hx-target="#tasks"
      id="filter">

    <div class="col-12">
        <input asp-for="PageSize" class="form-control" type="number" placeholder="Page size"
               value="@(Model.PageSize is null or Defaults.PageSize ? null : Model.PageSize)"/>
    </div>

    <input asp-for="PageIndex" value="@Model.PageIndex" hidden="hidden"/>
</form>

<partial name="Libraries/Tasks/_RunningTasks" model="@Model"/>
